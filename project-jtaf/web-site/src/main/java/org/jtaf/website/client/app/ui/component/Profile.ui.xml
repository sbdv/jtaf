<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	</ui:style>
	<g:HTMLPanel>
			<table>
				<tr>
					<td rowspan="3">
						<g:Image ui:field="avatar" width="70px" height="70px" />
					</td>
					<td>					
						<b><g:Label ui:field="name" /></b>
					</td>	
				</tr>
				<tr>
					<td rowspan="2">
						<em><g:Label ui:field="pseudo" /></em>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
</ui:UiBinder> 