<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>		
	</ui:style>
	<g:HTMLPanel stylePrimaryName="status">
		<g:HTMLPanel stylePrimaryName="status-container row-fluid">
			<table>
				<tr>
					<th rowspan="3" style="padding-right:10px;">
						<g:Image ui:field="avatar" />
					</th>
					<th style="margin-top: 0;margin-bottom: 0;border-bottom: 1px solid rgb(96,152,232);padding-bottom: 0;padding-right:0;">
						<g:Anchor ui:field="pseudo" stylePrimaryName="status-pseudo pull-left" href="#"></g:Anchor>
						<g:Label ui:field="date" stylePrimaryName="status-date pull-right">22 mai 2013</g:Label>
					</th>	
				</tr>
				<tr>
					<td>
						<g:HTMLPanel stylePrimaryName="status-content">
							<p>
								Ceci est un test de status !
							</p>
						</g:HTMLPanel>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 